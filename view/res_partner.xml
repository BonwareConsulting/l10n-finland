<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="res_partner_business_industry">
            <field name="name">res.partner.form.business.industry</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                <field name="email" position="after">
	                <field name="business_industry_class" options='{"no_create": True, "no_open": True}'/>
	                <field name="business_industry_category" options='{"no_create": True, "no_open": True}' invisible="1" required="0" on_change="onchange_industry_category(business_industry_category, context)"/>
	                <field name="business_industry_industry" options='{"no_create": True, "no_open": True}' required="0" on_change="onchange_industry_industry(business_industry_industry, context)"/>
                </field>

            </field>
        </record>
    </data>
</openerp>